<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_container"
    android:layout_gravity="center"
    app:cardElevation="0dp"
    app:cardCornerRadius="8dp"
    android:clipToPadding="true"
    app:cardBackgroundColor="@color/colorPlaceholder"
    android:layout_width="@dimen/item_width_h"
    android:layout_height="@dimen/item_height_h">
    <FrameLayout
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/iv_thumbnail"
            android:scaleType="centerCrop"
            android:contentDescription="@string/des_thumbnail"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <View
            android:id="@+id/view_gradient"
            android:visibility="gone"
            android:background="@drawable/bg_black_gradient"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <TextView
            android:id="@+id/tv_name"
            android:textColor="@android:color/white"
            android:padding="8dp"
            android:layout_gravity="bottom"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </FrameLayout>
</androidx.cardview.widget.CardView>